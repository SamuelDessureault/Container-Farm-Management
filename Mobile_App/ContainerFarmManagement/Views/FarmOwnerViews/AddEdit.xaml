<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ContainerFarmManagement.Views.FarmOwnerViews.AddEditOwner"
             Title="Add Container">
    <VerticalStackLayout>

        <Frame Padding="10" Margin="5" CornerRadius="5">
            <VerticalStackLayout>
                <Label Text="Container Label"/>
                <Entry x:Name="containerLabel" Placeholder="Enter container label"/>
            </VerticalStackLayout>
        </Frame>

        <Frame Padding="10" Margin="5" CornerRadius="5">
            <VerticalStackLayout>
                <Label Text="Container Number"/>
                <Label Text="" x:Name="containerNumber"/>
            </VerticalStackLayout>
        </Frame>

        <Frame Padding="10" Margin="5" CornerRadius="5">
            <VerticalStackLayout>
                <Label Text="Container Device Id"/>
                <Entry x:Name="containerDeviceEntry" Placeholder="Enter container device id"/>
            </VerticalStackLayout>
        </Frame>

        <Button Text="Submit" Clicked="Button_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>
